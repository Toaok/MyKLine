<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.klinelib.chart.AppCombinedChart
            android:id="@+id/price_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.example.klinelib.chart.KLineChartInfoView
            android:id="@+id/k_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_background"
        android:layout_marginBottom="@dimen/bottom_chart_height"
        android:layout_gravity="bottom"
        ></View>
    <com.example.klinelib.chart.AppCombinedChart
        android:id="@+id/vol_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_chart_height"
        android:layout_gravity="bottom" />


    <com.example.klinelib.chart.AppCombinedChart
        android:id="@+id/macd_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_chart_height"
        android:layout_gravity="bottom" />

    <com.example.klinelib.chart.AppCombinedChart
        android:id="@+id/kdj_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_chart_height"
        android:layout_gravity="bottom" >


    </com.example.klinelib.chart.AppCombinedChart>

</FrameLayout>
